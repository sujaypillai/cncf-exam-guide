---
import Layout from '../components/astro/Layout.astro';
---

<Layout title="Page Not Found">
  <div class="text-center py-20">
    <h1 class="text-6xl font-bold text-cncf-navy mb-4">404</h1>
    <p class="text-xl text-gray-600 mb-8">Page not found</p>
    <a
      href="/"
      class="bg-cncf-blue text-white px-6 py-3 rounded-lg hover:bg-cncf-navy transition-colors font-medium"
    >
      Return Home
    </a>
  </div>
</Layout>
