---
import Layout from '../components/astro/Layout.astro';
import LearningPathViewer from '../components/react/LearningPathViewer';
import { LEARNING_PATHS } from '../data/learning-paths';
import { exams } from '../utils/exam-helpers';
---

<Layout title="Learning Paths" description="Curated certification journeys for cloud native professionals">
  <div class="max-w-6xl mx-auto">
    <h1 class="text-3xl font-bold text-cncf-navy mb-2">Learning Paths</h1>
    <p class="text-gray-500 mb-8">
      Curated certification journeys to advance your cloud native expertise.
    </p>

    <LearningPathViewer paths={LEARNING_PATHS} exams={exams} client:load />
  </div>
</Layout>
