---
import Layout from '../../components/astro/Layout.astro';
import ExamGrid from '../../components/react/ExamGrid';
import { exams } from '../../utils/exam-helpers';
---

<Layout title="All Exams" description="Browse all CNCF certification exams">
  <h1 class="text-3xl font-bold text-cncf-navy mb-2">All CNCF Certification Exams</h1>
  <p class="text-gray-500 mb-8">{exams.length} certifications available</p>

  <ExamGrid exams={exams} client:load />
</Layout>
