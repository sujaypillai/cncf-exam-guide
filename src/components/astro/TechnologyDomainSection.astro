---
import type { TechnologyDomainInfo } from '../../types/exam';
import ExamCard from './ExamCard.astro';
import { getExamsByDomain } from '../../utils/exam-helpers';

interface Props {
  domain: TechnologyDomainInfo;
}

const { domain } = Astro.props;
const domainExams = getExamsByDomain(domain.id);
---

<section class="mb-12">
  <div class="mb-6">
    <h2 class="text-2xl font-bold text-cncf-navy mb-1">{domain.name}</h2>
    <p class="text-gray-500 text-sm">{domain.description}</p>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {domainExams.map((exam) => <ExamCard exam={exam} />)}
  </div>
</section>
