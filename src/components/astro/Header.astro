---
const navItems = [
  { href: '/', label: 'Home' },
  { href: '/exams', label: 'All Exams' },
  { href: '/learning-paths', label: 'Learning Paths' },
  { href: '/compare', label: 'Compare' },
  { href: '/search', label: 'Search' },
];
---

<header class="bg-cncf-navy text-white shadow-lg">
  <nav class="container mx-auto px-4 py-4 max-w-7xl">
    <div class="flex items-center justify-between">
      <a href="/" class="text-xl font-bold tracking-tight hover:text-cncf-light transition-colors">
        CNCF Exam Guide
      </a>
      <button
        id="mobile-menu-btn"
        class="md:hidden p-2 rounded hover:bg-white/10"
        aria-label="Toggle navigation"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
      <ul class="hidden md:flex items-center space-x-6">
        {navItems.map(({ href, label }) => (
          <li>
            <a href={href} class={`hover:text-cncf-light transition-colors text-sm font-medium ${label === 'Search' ? 'flex items-center gap-1' : ''}`}>
              {label === 'Search' && (
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
              )}
              {label}
            </a>
          </li>
        ))}
      </ul>
    </div>
    <ul id="mobile-menu" class="hidden md:hidden mt-4 space-y-2 pb-2">
      {navItems.map(({ href, label }) => (
        <li>
          <a href={href} class="block py-2 px-3 rounded hover:bg-white/10 text-sm font-medium">
            {label}
          </a>
        </li>
      ))}
    </ul>
  </nav>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  btn?.addEventListener('click', () => menu?.classList.toggle('hidden'));
</script>
